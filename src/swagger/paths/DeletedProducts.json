{
    "/deleted-products": {
        "get": {
            "summary": "Get all deleted products",
            "description": "Retrieves a list of all deleted products.",
            "tags": [
                "Deleted Products"
            ],
            "security": [
                {
                    "bearerAuth": []
                }
            ],
            "responses": {
                "200": {
                    "description": "A list of deleted products",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "deletedProductsList": {
                                        "type": "array",
                                        "items": {
                                            "type": "object",
                                            "$ref": "#/components/schemas/DeletedProduct",
                                            "description": "Deleted Product"
                                        },
                    
                                        "description": "Deleted products list"
                                    },
                                    "status": {
                                        "type": "integer",
                                        "description": "Status code request",
                                        "example": 200
                                    }
                                }
                            }
                        }
                    }
                },
                "500": {
                    "description": "Internal server error",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "error": {
                                        "type": "string",
                                        "description": "Error message",
                                        "example": "Internal server error"
                                    },
                                    "status": {
                                        "type": "integer",
                                        "example": 500
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "/products/{id}": {
        "put": {
            "summary": "Update a product",
            "description": "Updates the specified product.",
            "tags": [
                "Products"
            ],
            "security": [
                {
                    "bearerAuth": []
                }
            ],
            "parameters": [
                {
                    "name": "id",
                    "in": "path",
                    "required": true,
                    "schema": {
                        "type": "string"
                    },
                    "description": "ID of the product to update"
                }
            ],
            "requestBody": {
                "required": true,
                "content": {
                    "application/json": {
                        "schema": {
                            "type": "object",
                            "properties": {
                                "name": {
                                    "type": "string",
                                    "description": "Product name",
                                    "example": "Keyboard tx500"
                                },
                                "lot_number": {
                                    "type": "string",
                                    "description": "Product batch number",
                                    "example": "A500BC"
                                },
                                "price": {
                                    "type": "integer",
                                    "description": "Product price",
                                    "example": 50
                                },
                                "stock": {
                                    "type": "integer",
                                    "description": "Product quantity",
                                    "example": 560
                                },
                                "entry_date": {
                                    "type": "string",
                                    "description": "Product entry date",
                                    "example": "27-07-2024"
                                }
                            }
                        }
                    }
                }
            },
            "responses": {
                "200": {
                    "description": "Product updated successfully",
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Product"
                            }
                        }
                    }
                },
                "400": {
                    "description": "Bad request",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "error": {
                                        "type": "string",
                                        "description": "Error message",
                                        "example": "No product id found in query parameters"
                                    },
                                    "status": {
                                        "type": "integer",
                                        "example": 400
                                    }
                                }
                            }
                        }
                    }
                },
                "404": {
                    "description": "Product not found",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "error": {
                                        "type": "string",
                                        "description": "Error message",
                                        "example": "Product not found"
                                    },
                                    "status": {
                                        "type": "integer",
                                        "example": 404
                                    }
                                }
                            }
                        }
                    }
                },
                "500": {
                    "description": "Internal server error",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "error": {
                                        "type": "string",
                                        "description": "Error message",
                                        "example": "Internal server error"
                                    },
                                    "status": {
                                        "type": "integer",
                                        "example": 500
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
